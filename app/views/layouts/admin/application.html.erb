<!DOCTYPE html>
<html>
  <head>
    <title>RBlog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'admin/application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   
   <nav class="navbar navbar-default>
      <div class="container">
          <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
               </button>
               <a class="navbar-brand" href="#"><h1>rBlog<span>/Manager</span></h1></a>
            </div>
              <div id="navbar" class="collapse navbar-collapse">
                 <ul class="nav navbar-nav">
                   <li class="<% params[:controller] == 'admin/posts' ? 'active' : '' %>"><a <%= link_to 'Posts',admin_posts_path%></a></li>
                   <li class="<% params[:controller] == 'admin/posts' ? 'active' : '' %>"><a <%= link_to 'Categories',admin_categories_path%></a></li>
                   <li class="<% params[:controller] == 'admin/posts' ? 'active' : '' %>"><a <%= link_to 'Users',admin_users_path%></a></li>
                 </ul>
               <%= render 'partials/admin/search' %>
              </div><!--/.nav-collapse -->
            </div>

    </nav>

    <section>
        <div class="container">
          <div class="row">
           <div class="col-md-12">
             <div class="well">
              <%= yield %>
             </div>
           </div>
          </div>
        </div>
      
    </section>
    <footer>
      <p>Copyright &Copy: 2018 , rBlog | <a href="login.html">Admin Login</a></p>
    </footer>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                              
